<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.mobintum.musicplayer.fragments.DetailSongFragment">

    <ImageView
        android:id="@+id/imgThumbDetailF"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:layout_gravity="center"
        android:src="@mipmap/thumb_get_lucky"/>

    <TextView
        android:id="@+id/textDetailSongF"
        android:text="@string/hello_world"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/textDetailArtistF"
        android:text="@string/hello_world"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/textDetailAlbumF"
        android:text="@string/hello_world"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="1"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">
        <TextView
            android:text="@string/time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1"/>
        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:id="@+id/progressBarF"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/textDetailTimeF"
            android:text="@string/time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <ImageButton
            android:id="@+id/btnBackwardF"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"

            android:scaleType="fitXY"
            android:src="@mipmap/btn_backward"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/btnPlayF"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"

            android:scaleType="fitXY"
            android:src="@mipmap/btn_play"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/btnForwardF"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"

            android:scaleType="fitXY"
            android:src="@mipmap/btn_forward"
            android:background="@android:color/transparent"/>


    </LinearLayout>


</LinearLayout>
